#!/usr/bin/env bash

mplayer() {
    LOCKFILE="$HOME/.cache/eww-cris-mplayer.lock"

if [[ ! -f "$LOCKFILE" ]]; then
    touch "$LOCKFILE"
    eww open music -c ~/.config/bspwm/eww/ --screen 0
elif [[ -f "$LOCKFILE" ]]; then
    eww close music -c ~/.config/bspwm/eww
    rm "$LOCKFILE"
fi
}

mplayer
