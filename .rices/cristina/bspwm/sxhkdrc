##---------- Keybindings for bspwm ----------##

# Terminal (alacritty)
super + Return
	notify-send "BSPWM Toroid" "Opened alacritty in full screen. Never stay in terminal for a long time, it may consume you..." -u "normal" && alacritty

# Terminal (floating)
super + shift + Return
	notify-send "BSPWM Toroid" "Opened alacritty in floating window. Never stay in terminal for a long time, it may consume you..." -u "normal" && bspterm --float
	

# Terminal (fullscreen)
super + alt + Return
	bspterm --full

# Terminal (kitty)
ctrl + alt + t
    kitty


##---------- Applications ----------##

# Launch Apps
super + shift + {w,e}
	{firefox,geany}

# Terminal Apps
ctrl + alt + {v,r,h}
	alacritty --config-file ~/.config/bspwm/alacritty/alacritty.toml -e {vim,ranger,btop}

# Color Picker
super + p
	bspcolorpicker

# Music
ctrl + alt + m
	bspmusic

# Lockscreen
super + l
    betterlockscreen --lock

##---------- System Keys ----------##

###################################UTILS##########################################
# Brighness control
XF86MonBrightness{Up,Down}
	bspbrightness{ --inc, --dec}
	
# Speaker Volume control
XF86Audio{RaiseVolume,LowerVolume}
	bspvolume{ --inc, --dec}

# Mic Volume control
XF86Audio{Mute,MicMute}
	bspvolume{ --toggle, --toggle-mic}
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

##---------- Bspwm ----------##

# Hide/Unhide Window
F8
    bspwinmask

# Close App
super + {_,shift + }c
	bspc node -{c,k}

# kill window
ctrl + alt + Escape
	notify-send "BSPWM Toroid" "Your magnetic field just casually killed a program in my system. It hurts." -u "normal" && xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
    notify-send "BSPWM Restart" "Beware my friend, you are restarting this session in ETA=5 seconds!! Don't search for this notification in deadd..." -u "critical" && sleep 5 && bspc {quit,wm -r}
	
# Reload Keybindings
super + Escape
    notify-send "BSPWM Keybindings" "Am I a joke? Stop reloading me you son of a sharan..." -u "normal" && pkill -USR1 -x sxhkd 

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch workspace or Send focused Node to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}' '--follow'

# Send focused Node to workspace directionally
super + ctrl + shift + {Left,Right}
	bspc node -d {prev,next} '--follow'

# Change focus of the Node or Swap Nodes
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Move floating windows
super + alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
# Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {south,east,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Toggle Layout (Tiled/Monocle)
F9
	bspc desktop -l next

# Toggle Fullscreen
F10
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
F11
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
F12
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

######################## SCREENSHOTS ###################################
# Take a screenshot
Print
	bspscreenshot --now
	
# Take screenshot in 5 second
alt + Print	
	bspscreenshot --in5

# Take screenshot in 10 second
shift + Print	
	bspscreenshot --in10

# Take screenshot of active window
ctrl + Print
	bspscreenshot --win

# Take screenshot of area
super + Print
	bspscreenshot --area


##----------CUSTOM-MADE----##

F1
    caja

super + space
    vicinae toggle

# Toggle notification center
super + i
    kill -s USR1 $(pidof deadd-notification-center)

super + x
    vicinae deeplink vicinae://extensions/vicinae/clipboard/history	

super + a
    vicinae deeplink vicinae://extensions/rithvikvibhu/arch-packages/search-arch-packages

super + w
    vicinae deeplink vicinae://extensions/tonka3000/weather/index

super + n
    vicinae-wifi

super + o
    vicinae deeplink vicinae://extensions/vicinae/wm/switch-windows

################# POWER MANAGEMENT #############################################

alt + Delete + s
    systemctl poweroff

alt + Delete + r
    systemctl reboot

alt + Delete + l
    bspc quit
